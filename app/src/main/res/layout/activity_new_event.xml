<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_regi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#08253c"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <Button
            android:id="@+id/sEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eBudget"
            android:layout_marginTop="24dp"
            android:text="CREATE EVENT" />

        <EditText
            android:id="@+id/sDeptDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eTextView03"
            android:clickable="true"
            android:focusable="false"
            android:background="#ffffff"
            android:ems="10" />

        <EditText
            android:id="@+id/eDest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eStartLoc"
            android:layout_alignStart="@+id/e_username"
            android:layout_below="@+id/eStartLoc"
            android:layout_marginTop="41dp"
            android:background="#ffffff"
            android:ems="10">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/eTextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eDest"
            android:layout_marginTop="25dp"
            android:text="DEPARTURE DATE :"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/eTextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eName"
            android:layout_marginTop="28dp"
            android:text="STARTING LOCATION :"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/eStartLoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eTextView01"
            android:background="#ffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/eTextView08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="CREATE NEW EVENT"
            android:textColor="#ffff00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eTextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eDest"
            android:layout_below="@+id/eStartLoc"
            android:layout_marginTop="19dp"
            android:text="DESTINATION :"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/e_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eTextView08"
            android:layout_marginTop="30dp"
            android:text="EVENT NAME :"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/eName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/eTextView01"
            android:layout_alignStart="@+id/e_username"
            android:layout_below="@+id/e_username"
            android:background="#ffffff"
            android:ems="10" />

        <TextView
            android:id="@+id/eTextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sDeptDate"
            android:layout_marginTop="25dp"
            android:text="ESTIMATED BUDGET :"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/eBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/eTextView04"
            android:background="#ffffff"
            android:ems="10" />


    </RelativeLayout>

</ScrollView>